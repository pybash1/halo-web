---
import "../styles/global.css";
import "@fontsource/instrument-serif";
import "@fontsource-variable/dm-sans";
import WaitlistButton from "../components/WaitlistButton.tsx";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Browse at the speed of thought with Perplexity Comet - the AI-powered browser that anticipates your needs."
    />
    <title>Halo - Because you're safety matters</title>
  </head>
  <body class="font-sans">
    <main>
      <Navbar />
      <div class="h-screen flex items-center justify-center">
        <div class="space-y-10">
          <div class="text-6xl font-serif">Be Safe</div>
          <div class="font-satoshi max-w-96">
            Ever been in a situation where you felt threatened or scared with no
            way out? We're here to change that for you and everyone you care
            about. No more suffering alone, no more dead ends. It's time to feel
            safe. âœ¨
          </div>
          <WaitlistButton
            className="bg-black text-white py-1.5 text-sm rounded-md hover:bg-black/80 transition-colors ease-in-out duration-500 cursor-pointer px-2.5"
            client:load
          >
            Make the world safer &gt;
          </WaitlistButton>
        </div>
      </div>
      <Footer />
    </main>
  </body>
</html>
